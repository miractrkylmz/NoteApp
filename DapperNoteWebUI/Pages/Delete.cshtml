@page
@model DapperNoteWebUI.Pages.DeleteModel

<div style="max-width: 600px; margin: 4rem auto; padding: 2rem; background-color: #1e1e1e; border-radius: 12px; color: #e0e0e0;">

    <h2 style="text-align: center; color: #ff5252; margin-bottom: 0.5rem;">Notu Sil</h2>
    <p style="text-align: center; margin-bottom: 2rem;">Bu notu gerçekten silmek istiyor musun?</p>

    <div style="margin-bottom: 2rem; background-color: #2c2c2c; padding: 1rem; border-radius: 8px;">
        <p><strong>Başlık:</strong> @Model.Note.Title</p>
        <p><strong>İçerik:</strong> @Model.Note.Content</p>
    </div>

    <form method="post" style="display: flex; justify-content: center; gap: 1rem;">
        <input type="hidden" asp-for="Note.Id" />
        <button type="submit" style="background-color: #ff5252; color: white; border: none; padding: 0.6rem 1.2rem; border-radius: 6px; cursor: pointer;">Evet, Sil</button>
        <a href="/Index" style="background-color: #00bcd4; color: white; padding: 0.6rem 1.2rem; text-decoration: none; border-radius: 6px;">İptal</a>
    </form>

    <p style="text-align: center; margin-top: 2.5rem; font-size: 0.85rem; color: #888;">Silme işlemi geri alınamaz.</p>
</div>