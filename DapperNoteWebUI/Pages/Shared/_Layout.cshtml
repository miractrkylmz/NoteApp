<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoteAPP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DapperNoteWebUI.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-white">

    <header class=" mb-4">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <a href="/" class="d-flex align-items-center text-decoration-none text-info">
                <img src="/favicon.ico" alt="NoteApp" width="32" height="32" class="me-2" />
                <h3 class="m-0">NoteApp</h3>
            </a>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-muted py-3">
        <small>&copy; 2025 - NoteApp</small>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>